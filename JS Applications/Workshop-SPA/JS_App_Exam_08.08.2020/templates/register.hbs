{{> header}}
<form class="text-center border border-light p-5" action="#/register" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" value="" id="username">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password" value="" id="password">
    </div>

    <div class="form-group">
        <label for="repeatPassword">Repeat Password</label>
        <input type="password" class="form-control" placeholder="Repeat-Password" name="repeatPassword" value="" id="repeatPassword">
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
{{> footer}}