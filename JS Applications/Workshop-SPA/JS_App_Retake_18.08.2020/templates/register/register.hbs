{{> header}}
<h1>Register</h1>
<p class="form-info">Already registered?
    <a href="#/login">Login now</a> and have some fun!
</p>

<form action="#/register" method="post">
    <div>
        <input id="username" type="email" placeholder="Email..." name="username">
    </div>
    <div>
        <input id="password" type="password" placeholder="Password" name="password">
    </div>
    <div>
        <input id="repeatPassword" type="password" placeholder="Re-password" name="repeatPassword">
    </div>
    <div>
        <p class="message"></p>
        <button>Register</button>
    </div>
</form>
{{> footer}}