{{> header}}
<h1>Edit Offer</h1>
<p class="message"></p>
<form action="#/edit/:{{id}}" method="post">
    <div>
        <input type="text" placeholder="Name..." value="{{model}}" name="model">
    </div>
    <div>
        <input type="text" placeholder="Price..." value="{{price}}" name="price">
    </div>
    <div>
        <input type="text" placeholder="Image url..." value="{{imageUrl}}" name="imageUrl">
    </div>
    <div>
        <textarea placeholder="Give us some description about this offer..." name="description">{{description}}</textarea>
    </div>
    <div>
        <input type="text" placeholder="Brand..." value="{{brand}}" name="brand">
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>
{{> footer}}